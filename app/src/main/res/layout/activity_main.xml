<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/svVideoView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <Button
            android:id="@+id/btnStartVideoReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Start Video Received"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnStopVideoReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Stop Video Received"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.camera.view.PreviewView
            android:id="@+id/pvCameraView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <Button
            android:id="@+id/btnStartVideoStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Start Video Stream"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnStopVideoStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Stop Video Stream"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnWebRTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebRTC"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>